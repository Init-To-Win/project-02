<div class="site-width mx-auto">
        <div class="double-form bs-border-color bg-opacity-10 rounded-1 shadow">
          <div class="login-form">
            <div class="form-group">
                <label for="email-login">Email:</label>
                <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="form-group">
              <label for="password-login">Password:</label>
              <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group login-form-centered">
              <button class="btn btn-secondary" type="submit" id="login-button">
                Login
              </button>
            </div>
          </div>
          <div class="login-or login-form-centered">
            <h4>~ OR ~</h4>
          </div>
          <div class="signup-form">
            <div class="form-group">
                <label for="username-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
              <label for="password-signup">Password:</label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group login-form-centered">
              <button class="btn btn-secondary" type="submit" id="signup-button">
                Create Account
              </button>
            </div>
        </div>
      </div>
      <script src="./js/login.js"></script>